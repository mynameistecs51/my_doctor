<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Mainpage">

    <ImageButton
        android:id="@+id/imageButton11"
        android:layout_width="114dp"
        android:layout_height="98dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="66dp"
        android:layout_marginTop="95dp"
        android:background="?attr/actionModeBackground"
        app:srcCompat="@drawable/pilltime" />

    <ImageButton
        android:id="@+id/imageButton13"
        android:layout_width="114dp"
        android:layout_height="98dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="69dp"
        android:layout_marginTop="100dp"
        android:layout_toEndOf="@+id/imageButton11"
        android:background="?attr/actionModeBackground"
        app:srcCompat="@drawable/calendar" />

    <ImageButton
        android:id="@+id/imageButton14"
        android:layout_width="123dp"
        android:layout_height="95dp"
        android:layout_below="@+id/textView2"
        android:layout_alignParentStart="true"
        android:layout_marginStart="65dp"
        android:layout_marginTop="46dp"
        android:background="@drawable/ic_launcher_foreground"
        app:srcCompat="@drawable/user" />

    <ImageButton
        android:id="@+id/imageButton15"
        android:layout_width="114dp"
        android:layout_height="98dp"
        android:layout_below="@+id/textView4"
        android:layout_marginStart="61dp"
        android:layout_marginTop="40dp"
        android:layout_toEndOf="@+id/imageButton14"
        android:background="?attr/actionModeBackground"
        app:srcCompat="@drawable/openbook" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageButton11"
        android:layout_alignParentStart="true"
        android:layout_marginStart="64dp"
        android:layout_marginTop="22dp"
        android:text="แจ้งเตือนการทานยา" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageButton13"
        android:layout_marginStart="71dp"
        android:layout_marginTop="15dp"
        android:layout_toEndOf="@+id/textView2"
        android:text="ตารางนัดพบแพทย์" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageButton14"
        android:layout_alignParentStart="true"
        android:layout_marginStart="91dp"
        android:layout_marginTop="28dp"
        android:text="ข้อมูลส่วนตัว" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageButton15"
        android:layout_marginStart="106dp"
        android:layout_marginTop="34dp"
        android:layout_toEndOf="@+id/textView5"
        android:text="ความรู้ทั่วไป" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="170dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="130dp"
        android:text="MENU"
        android:textColor="@color/colorPrimary"
        android:textSize="30sp"
        android:textStyle="bold" />

</RelativeLayout>